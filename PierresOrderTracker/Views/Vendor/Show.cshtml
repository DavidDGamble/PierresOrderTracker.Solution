@{
  Layout = "_Layout";
}

@using PierresOrderTracker.Models;

<h1>@Model["vendor"].Name</h1>
<p>@Model["vendor"].Description<p>

<h1><u>Orders</u></h1>

@if (@Model["orders"].Count == 0)
{
  <h3>No Orders have been added yet!</h3>
}

  @foreach (Order order in @Model["orders"])
  {
    <h3><a id="link" href='/vendors/@Model["vendor"].Id/orders/@order.Id'>@order.Title</a></h3>
  }

<h5 id="toplink"><a href='/vendors/@Model["vendor"].Id/orders/new'>Add new order</a></h5>
<h5><a href='/vendors'>Return to Vendors</a></h5>
<h5><a href='/'>Return Home</a></h5>